  "homepage": "https://github.com/muozez/taskey#readme",
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "build": {
    "appId": "com.muozez.taskey",
    "productName": "taskey",
    "directories": {
